
<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <% newTasks.forEach(task => { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" value="<%=task._id%>" name="checkboxValue" onchange="this.form.submit()">
                    <p><%=task.name%></p>
                </div>
            </form>
        <% }) %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newValue" placeholder="New task" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>
    
    </div>
<%- include("footer") -%>
